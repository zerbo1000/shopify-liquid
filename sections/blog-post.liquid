{{ section.settings.liquid-range }}


{%- comment -%} {{ section.settings.new-blog.articles_count }} {%- endcomment -%}

{% assign blog = section.settings.new-blog %}

{% unless blog.articles_count == 0 %}
    
    {%- comment -%} display article based on range {%- endcomment -%}
    <div class="page-width" style="display:inline-flex ;" >
        <div class="grid grid--uniform grid--blog" >     
    {% for article in blog.articles limit: section.settings.posts-range %}

        <div class="grid__item medium-up--one-third" >
            <a href="{{article.url}}">
                <img src="{{article.image | img_url: "250x" }}"  />
            </a>
            <br>
            <a href="{{article.url}}">
                {{ article.title }}
            </a>
        </div>
    {% endfor %}
    </div>
</div>
    
    
{% endunless %}

{% schema %}
    {
        "name":"New Blog Posts",
        "settings":[
            {
                "id":"posts-range",
                "type":"range",
                "label":"Range",
                "min":3,
                "max":12,
                "step":1,
                "unit":"mtr",
                "default":3
            },
            {
                "id":"new-blog",
                "type":"blog",
                "label":"Blog"
            }
        ],
        "presets":[
            {
                "name":"New Blog Post",
                "category":"Posts"
            }
        ]
    }
{% endschema %}