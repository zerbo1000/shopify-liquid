{{ 'social/social-icons.css' | global_asset_url | stylesheet_tag }}
<br><br>
<div hidden>
  <span id="new-window-0">Opens in a new window</span>
</div>

<div class="page-width" >
<h2> {{ section.settings.social-nav }} </h2>

<ul class="social-media-menu">
  {% for block in section.blocks  %}


    <li>
      <a href="{{ block.settings.social-url }}"
        target="_blank"
        rel="noopener"
        aria-label="{{ block.settings.social-name }}"
        aria-describedby="new-window-0">
        <span class="shopify-social-icon-{{ block.settings.social-name | lowercase }}-circle" aria-hidden="true"></span>
      </a>
    </li>

  {% endfor %}


  
  {%- comment -%} 
  <li>
      <a href="https://facebook.com/shopify"
        target="_blank"
        rel="noopener"
        aria-label="Facebook"
        aria-describedby="new-window-0">
        <span class="shopify-social-icon-facebook-circle" aria-hidden="true"></span>
      </a>
    </li>
  <li>
    <a href="https://twitter.com/shopify"
      target="_blank"
      rel="noopener"
      aria-label="Twitter"
      aria-describedby="new-window-0">
      <span class="visuallyhidden">Twitter</span>
      <span class="shopify-social-icon-twitter-circle" aria-hidden="true"></span>
    </a>
  </li>
  <li>
    <a href="https://pinterest.com/shopify/"
      target="_blank"
      rel="noopener"
      aria-label="Pinterest"
      aria-describedby="new-window-0">
      <span class="shopify-social-icon-pinterest-circle" aria-hidden="true"></span>
    </a>
  </li>
  <li>
    <a href="https://instagram.com/shopify/"
      target="_blank"
      rel="noopener"
      aria-label="Instagram"
      aria-describedby="new-window-0">
      <span class="shopify-social-icon-instagram-circle" aria-hidden="true"></span>
    </a>
  </li> {%- endcomment -%}


</ul>

</div>

{% schema %}
    {
        "name":"Social Media Nav",
        "settings":[
            {
                "id":"social-nav",
                "type":"text",
                "label":"Message"

            }
        ],
        "presets":[
            {
                "name":"Social Media Nav",
                "category":"Promotional"
            }
        ],
        "blocks":[
            {
                "name":"Social Media Network",
                "type":"social-network",
                "settings":[
                    {
                        "id":"social-url",
                        "type":"url",
                        "label":"URL"
                    },
                    {
                        "id":"social-name",
                        "type":"text",
                        "label":"Network Name"
                    }
                ]
            }
        ]
    }
{% endschema %}