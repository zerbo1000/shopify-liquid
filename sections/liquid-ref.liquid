{%- schema -%}
{
    "name":"Liquid Reference",
    "settings": [
        {
            "id":"liquid-ref",
            "type":"text",
            "label":"A Reference for Shopify Liquid"
        },
        {
            "id":"liquid-checkbox",
            "type":"checkbox",
            "label":"A checkbox in liquid"
        },
        {
            "id":"liquid-number",
            "type":"number",
            "label":"Add a Number"
        },
        {
            "id":"liquid-radio",
            "type":"radio",
            "label":"Add a radio button",
            "options":[
                {
                    "value":"option-1",
                    "label":"Option-1"
                },
                {
                    "value":"option-2",
                    "label":"Option-2"
                }
            ]
        }
    ],
    "presets":[
        {
            "name":"Liquid Reference",
            "category":"Reference"
        }
    ]
}
{%- endschema -%}