<h1>{{ section.settings.liquid-ref }}</h1>

{% if section.settings.liquid-checkbox == true %}
    <h2>checkbox is checked</h2>

      {% else %}} <h2>checkbox not is checked</h2>

{%  endif %}

{% if section.settings.liquid-number <= 0 %}
{{section.settings.liquid-number}}
{% endif %}

{%- schema -%}
{
    "name":"Liquid Reference",
    "settings": [
        {
            "id":"liquid-ref",
            "type":"text",
            "label":"A Reference for Shopify Liquid"
        },
        {
            "id":"liquid-checkbox",
            "type":"checkbox",
            "label":"A checkbox in liquid"
        },
        {
            "id":"liquid-number",
            "type":"number",
            "label":"Add a Number"
        }
    ],
    "presets":[
        {
            "name":"Liquid Reference",
            "category":"Reference"
        }
    ]
}
{%- endschema -%}